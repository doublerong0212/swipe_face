<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配分設定"
                android:textColor="#000000"
                android:textSize="23sp"
                android:textStyle="" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/shadow" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="25dp">

                    <TextView
                        android:id="@+id/textViewAttendSit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="出席狀況"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="50dp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textViewAStotal"
                            android:layout_width="135dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="出席佔學期總成績"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/editTexttotalPoints"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:enabled="true"
                            android:gravity="center"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:scrollbars="vertical" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="分"
                        android:textColor="#000000"
                        android:textSize="16sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="50dp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textViewlate"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="遲到 扣"
                            android:textColor="#000000"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/editTextlateMinus"
                            android:layout_width="195dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:enabled="true"
                            android:gravity="center"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:scrollbars="vertical" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewlateminusp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="分"
                        android:textColor="#000000"
                        android:textSize="16sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="50dp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textViewAbsentee"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="曠課 扣"
                            android:textColor="#000000"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/editTextAbsenteeMinus"
                            android:layout_width="187dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:enabled="true"
                            android:gravity="center"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:scrollbars="vertical" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewAbsenteeMinusp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="分"
                        android:textColor="#000000"
                        android:textSize="16sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="25dp">

                    <TextView
                        android:id="@+id/textViewEarlywarning"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="預警"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="50dp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textViewAbsenteeTimes"
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="累積曠課"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/editTextEWTimes"
                            android:layout_width="171dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:enabled="true"
                            android:gravity="center"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:scrollbars="vertical" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="次"
                        android:textColor="#000000"
                        android:textSize="16sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="50dp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="出席成績低於"
                            android:textColor="#000000"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/editTextEWPoints"
                            android:layout_width="135dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:enabled="true"
                            android:gravity="center"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:scrollbars="vertical" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="分"
                        android:textColor="#000000"
                        android:textSize="16dp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="25dp">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="課堂參與"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="50dp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="點人回答 加"
                            android:textColor="#000000"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/editTextAnswerBonus"
                            android:layout_width="147dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:enabled="true"
                            android:gravity="center"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:scrollbars="vertical" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="分"
                        android:textColor="#000000"
                        android:textSize="16sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F5F5F5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="50dp">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="隨堂問答 加"
                            android:textColor="#000000"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/editTextRDBonus"
                            android:layout_width="147dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:enabled="true"
                            android:gravity="center"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:scrollbars="vertical" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="分"
                        android:textColor="#000000"
                        android:textSize="16sp" />


                </LinearLayout>

                <ListView
                    android:id="@+id/msg_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="#0000"></ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dp">

                    <Button
                        android:id="@+id/ButtonSendout"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:background="#0806b1"
                        android:text="完成"
                        android:textColor="	#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</LinearLayout>