                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="信箱"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/editTeacherEmail"
