<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainAndTest"
    android:orientation="vertical"
    android:background="#ffffff">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <include
            layout="@layout/navigation_actionbox_rollcallselect"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/photo_rollcall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/photo_rollcall"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="140dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/callname_rollcall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/callname_rollcall"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="140dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/random_rollcall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/random_rollcall"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="140dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/reRollcall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/re_rollcall"
            android:textSize="20sp" />
    </LinearLayout>





</LinearLayout>